# 🌐 Servidor
PORT=4000
HOST=0.0.0.0
NODE_ENV=development
LOG_LEVEL=debug

# 💾 Banco de dados PostgreSQL (externo)
DB_CLIENT=pg
DB_HOST=postgres.example.com
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=senha_aqui
DB_DATABASE=nome_do_banco

# 🔑 API Keys Administrativas (formato: key:limite)
# Usado apenas para criar keys via seed ou para chaves fixas
ADMIN_API_KEYS=demo-key:10,premium-key:100,unlimited-key:0

# ⚙️ Rate Limiting
RATE_LIMIT_DEFAULT=5
RATE_LIMIT_WINDOW=60000

# 🎨 PDF Generation
PDF_ENGINE=typst
PDF_TIMEOUT=30000
PDF_QUALITY=high

# 🔒 Security
CORS_ORIGIN=*
HELMET_ENABLED=true
JWT_SECRET=coloque_um_segredo_aleatorio_aqui

# 📈 Performance
ENABLE_COMPRESSION=true
CACHE_TEMPLATES=true
CACHE_DURATION=30000
TEMPLATE_CACHE_DURATION=300000

# ☁️ MinIO / S3
S3_ENDPOINT=http://minio.example.com:9000
S3_REGION=us-east-1
S3_BUCKET=nome_do_bucket
S3_ACCESS_KEY=usuario_s3
S3_SECRET_KEY=senha_s3
# URL base para acessar os arquivos gerados (ajuste conforme sua exposição pública)
S3_PUBLIC_URL=http://minio.example.com:9000/nome_do_bucket
S3_PREFIXES=10

# 📨 Redis / Queue
REDIS_HOST=localhost
REDIS_PORT=6379

# ♻️ Idempotência
IDEMPOTENCY_TTL=3600
