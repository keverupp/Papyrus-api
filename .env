# 🌐 Servidor
PORT=3000
HOST=0.0.0.0

# 🗝️ API Keys (separadas por vírgula ou armazenadas em banco)
# Formato: chave:limite - Ex: mykey123:100
API_KEYS=demo-key:10,premium-key:100,unlimited-key:0

# Limite padrão por chave (separador : obrigatório)
# Se chave não for encontrada na lista acima, este valor será usado
RATE_LIMIT_DEFAULT=5

# 💾 Banco de dados PostgreSQL
DB_CLIENT=pg
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_DATABASE=papyrus

# 📧 E-mail (opcional)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=seu-usuario
SMTP_PASS=sua-senha
EMAIL_FROM="Papyrus API <no-reply@papyrus.com>"

# ⚙️ Outras opções
LOG_LEVEL=info
ENABLE_SWAGGER=true
