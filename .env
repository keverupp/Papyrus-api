# 🌐 Servidor
PORT=4000
HOST=0.0.0.0
NODE_ENV=development

# 💾 Banco de dados PostgreSQL
DB_CLIENT=pg
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=
DB_DATABASE=papyrus

# 🔑 API Keys Administrativas (formato: key:limite)
# Usado apenas para criar keys via seed ou para chaves fixas
ADMIN_API_KEYS=demo-key:10,premium-key:100,unlimited-key:0

# ⚙️ Rate Limiting
RATE_LIMIT_DEFAULT=5
RATE_LIMIT_WINDOW=60000

# 🎨 PDF Generation
PDF_ENGINE=puppeteer
PDF_TIMEOUT=30000
PDF_QUALITY=high

# 🔒 Security
CORS_ORIGIN=*
HELMET_ENABLED=true
JWT_SECRET=change_me

# 📈 Performance
ENABLE_COMPRESSION=true
CACHE_TEMPLATES=true
CACHE_DURATION=30000
